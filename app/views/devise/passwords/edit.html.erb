<div class="row justify-content-center">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header bg-primary"><span class="text-light">Change your password</span></div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="mb-3">
              <%= f.label :password, "New password", class: 'form-label' %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirm new password", class: 'form-label' %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Change my password", class: 'btn btn-primary' %>
              <div class="d-flex flex-lg-row flex-column justify-content-between mt-3">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
