<div class="row justify-content-center">
  <div class="col-8">
    <div class="card">
      <div class="card-header bg-primary"><span class="text-light">Log in</span></div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :username, class: 'form-label' %><br />
              <%= f.text_field :username, autofocus: true, autocomplete: 'username', class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: 'form-label' %><br />
              <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>
            <% end %>

            <div class="d-grid gap-3">
              <%= f.submit "Log in", class: 'btn btn-primary' %>
              <div class="d-flex flex-lg-row flex-column justify-content-between mt-3">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
